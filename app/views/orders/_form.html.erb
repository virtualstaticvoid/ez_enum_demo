<%= form_for @order do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status, Status.choices_for_select, :include_blank => true %>
  </p>
  <p><%= f.submit %></p>
<% end %>
